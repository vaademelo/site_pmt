header  
  .department-name
    .container
      p 
        strong #{strings.menu.nomeDepartamento} - 
        a(class="poli" href="http://www.poli.usp.br" target="_blank")
          != strings.menu.poli
        a(class="poli-shorten" href="http://www.poli.usp.br" target="_blank")
          | POLI/USP
        
        - if (lang == "en") 
          a(href='http://www.pmt.usp.br/' style='border: 0px')
            img(src=`${assets}img/br_flag.jpg` style='width: 30px; margin-left: 10px; margin-top: -5px')          
        
        - if (lang == "pt_br") 
          a(href='http://www.pmt.usp.br/en/' style='border: 0px')
            img(src=`${assets}img/en_flag.jpg` style='width: 30px; margin-left: 10px; margin-top: -5px')

  .header-dark
    .container
      .header-logo
        a(href=home_path)
          img(alt="logo PMT" src=assets+"img/pmt_logo_white.png") 
      
      .header-mobile-menu
        ul
          li.level-1-menu
            a.js-hamburger-button(class="menu-hamburger" href="#") 
              span(class="js-menu-icon flaticon-menu" aria-hidden="true")
            ul.level-2-menu
              each attribute, index in paths
                li.js-menu-category
                  a
                    | #{index}
                  ul.js-menu-sub-category
                    each item in attribute
                      a(href=home_path + item.relative_path)
                        li.level-3-menu
                          | #{item.name}
                      
      .header-menu
        ul
          each attribute, index in paths
            if attribute.length > 1 || index === "Pesquisa" || index === "Diversos"
              li.level-1-menu
                a(href=home_path + attribute[0].relative_path, target=attribute[0].taget)
                  | #{index}
                  span(class="arrow-down arrow-down glyphicon glyphicon-menu-down" aria-hidden="true")
                ul
                  each item in attribute
                    li.level-2-menu
                      a(href=home_path + item.relative_path target=item.target)
                        | #{item.name}
            else
              li.level-1-menu.not-expandable
                a(href=home_path + attribute[0].relative_path)
                  | #{index}
