include ../../../config/paths.jade

block page-name
  - var page_name = "O Departamento"

- var page_title = page_name + " | PMT - POLI/USP"

block before
  
block page-title 

block home
  - var home_path = "../../"
  
block assets
  - var assets = home_path + "assets/"

block stylesheet
  - var stylesheet = ""
  
doctype html
html(lang="pt-br")
  head
    meta(http-equiv="content-type", name="viewport", content="width=device-width, initial-scale=1, charset=UTF-8")
    title
      | #{page_title}
          
    link(rel="stylesheet" type="text/css" href=assets+"bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" href=assets+"iconpack/flaticon.css")
    link(rel="stylesheet" href=assets+"css/magnific-popup.css")
    
    link(rel="stylesheet" href=assets+"css/"+stylesheet)
    
    link(rel="canonical" href="https://dev.twitter.com/web/tweet-button")
    
    script(src=assets+"js/jquery-3.1.0.min.js")
    script(src=assets+"bootstrap/js/bootstrap.min.js")
    script(src=assets+"js/jquery.magnific-popup.min.js")
    
    script(src=assets+"js/mobile-header.js")
  
  body
    
    //- Google Plus share button
    <!-- Posicione esta tag no cabeÃ§alho ou imediatamente antes da tag de fechamento do corpo. -->
    script(src="https://apis.google.com/js/platform.js" async defer).
      {lang: 'pt-BR'}

    //- facebook share button script
    div(id="fb-root")
    script.
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.6";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    
    //- Linkedin share button script
    script(src="//platform.linkedin.com/in.js" type="text/javascript")
      lang: pt_BR
      
    //- Twitter share button script
    script.
      window.twttr = (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
          t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);
       
        t._e = [];
        t.ready = function(f) {
          t._e.push(f);
        };
       
        return t;
      }(document, "script", "twitter-wjs"));

      
    include includes/dark_header.jade
    
    include includes/banner.jade
    
    .container.info-bar
    
      include includes/breadcrumbs.jade
      
      .page-info
        h1.page-name
          | #{page_name}
        
        if paths[page_name] && paths[page_name].length > 1
          div.expand-menu
            span(class="arrow-down glyphicon glyphicon-menu-down" aria-hidden="true")
            ul.page-menu
              each page in paths[page_name]
                li(class=page.class)
                  a(href=home_path + page.relative_path)
                    | #{page.name}
            
          ul.page-menu
            each page in paths[page_name]
              li(class=page.class)
                a(href=home_path + page.relative_path)
                  | #{page.name}
                
    block content
    
    script.
      $(document).ready(function() {
        $('.iframe-link').magnificPopup({
          type:'iframe'
        });
        
        $('.image-link').magnificPopup({
          type:'image'
        });
      });
    
    include includes/footer.jade
        
          
            
