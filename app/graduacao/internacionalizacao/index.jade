      .session
        h1.session-title
          != strings.undergrad.internacionalizacao.titulo
        
        p.session-body
          != strings.undergrad.internacionalizacao.texto1

        p.session-body
          != strings.undergrad.internacionalizacao.texto2
          ul
            li
              a(href=`${assets}img/internacional.jpg` class='image-link') 
                != strings.undergrad.internacionalizacao.link0
      
